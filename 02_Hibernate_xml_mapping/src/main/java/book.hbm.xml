<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- тег class, параметри: ім`я - повний шлях до файла з класом від місця 
		знаходження цього файлу xml, -->
	<!-- таблиця - назва таблиці у БД -->
	<!-- в загальному в середині тегу class мають бути описані усі поля класу 
		які будуть відображатись у БД -->
	<!-- та звязки якщо такі присутні -->
	<class name="ua.com.library.entity.Book" table="Book">
		<!-- тег id показує що в ньму описане поле, яке буде виконувати роль id 
			таблиці -->
		<!-- параметри: name - назва поля в класі, type - тип поля в класі, column 
			- назва стовпця в тавлиці -->
		<id name="id" type="int" column="id">
			<!-- тег generator відображає стратегію генерування id детальніше тут -->
			<!-- стратегій є багато, не всі підходять для усіх БД -->
			<!-- стратегія, що використана в цьому прикладі при кожному збереженні 
				до БД збільшує id на 1 -->
			<generator class="increment"></generator>
		</id>
		<!-- тег property описує звичайні поля класу які не мають звязків -->
		<!-- параметри: name - назва поля класу, type - тип поля, column - назва 
			стовпця -->
		<property name="name" type="string" column="name"></property>
		<!-- тег many-to-one описує зв`язок багато-до-одного -->
		<!-- в БД відображається як FK -->
		<many-to-one name="student" class="ua.com.library.entity.Student"
			column="student_id"></many-to-one>
	</class>

</hibernate-mapping>